# ============================================================================
# DISCORD BOT CONFIGURATION
# ============================================================================

# Required: Your Discord bot token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Optional: Bot owner ID for admin commands
BOT_OWNER_ID=your_discord_user_id_here

# Optional: Custom command prefix (default: !)
BOT_PREFIX=!

# Optional: Enable debug mode (default: false)
DEBUG_MODE=false

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================

# Number of commands allowed per user per time window
RATE_LIMIT_COMMANDS=5

# Time window for rate limiting in seconds
RATE_LIMIT_WINDOW=60

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache TTL (Time To Live) in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# Maximum number of cache entries (default: 1000)
CACHE_MAXSIZE=1000

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API timeout in seconds (default: 10)
API_TIMEOUT=10

# Maximum number of retries for API calls (default: 3)
MAX_RETRIES=3

# ============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# ============================================================================

# Redis URL for distributed caching (optional)
# Format: redis://username:password@host:port/database
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# HEALTH CHECK CONFIGURATION
# ============================================================================

# Health check interval in seconds (default: 300 = 5 minutes)
HEALTH_CHECK_INTERVAL=300

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=true

# Log file path
LOG_FILE=bot.log